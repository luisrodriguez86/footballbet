{% extends 'FootballbetBundle::layout_admin.html.twig' %}

{% block content -%}
    <div class="container" style="margin-top: 40px">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <h1>Temporada</h1>

            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Título</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Año</th>
                    <td>{{ entity.year }}</td>
                </tr>
                </tbody>

            </table>
            <div class="form-inline">
                <div class="form-group">
                    <a href="{{ path('season') }}" class="btn btn-xs green">
                        Regresar al listado
                    </a>
                </div>
                <div class="form-group">
                    <a href="{{ path('season_edit', { 'id': entity.id }) }}" class="btn btn-xs purple">
                        Editar
                    </a>
                </div>
                <div class="form-group">{{ form(delete_form) }}</div>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>



{% endblock %}
