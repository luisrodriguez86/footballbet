{% extends 'FootballbetBundle::layout_admin.html.twig' %}

{% block content -%}
    <div class="page-content">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption"><h3>Listado de Roles</h3></div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-link pull-right" href="{{ path('admin_begin') }}"><i class="icon-remove"></i> Cancelar</a>
                        <a class="btn btn-link pull-right" href="{{ path('group_new') }}"><i class="icon-plus"></i> Nuevo</a>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>

                                <tr>
                                    <th class="hidden-xs">Nombre</th>
                                    <th>Roll</th>
                                    <th>Descripci&oacute;n</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td class="hidden-xs">{{ entity.name }}</td>
                                        <td>{{ entity.role }}</td>
                                        <td>{{ entity.description }}</td>
                                        <td><a href="{{ path('group_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Editar</a>
                                            &nbsp;
                                            <a href="{{ path('group_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> Ver</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>



{% endblock %}
