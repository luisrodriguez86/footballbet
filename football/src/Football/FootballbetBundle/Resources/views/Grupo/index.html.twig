{% extends 'FootballbetBundle::layout_admin.html.twig' %}
{% block title %}
    - Bienvenidos al Sitio de ...
{% endblock %}

{% block content %}
    <div class="page-content">
        <div class="row">
            <div class="col-md-12">

                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption"><h3>Listado de Grupo</h3></div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-link pull-right" href="{{ path('admin_begin') }}"><i class="icon-remove"></i> Cancelar</a>
                        <a class="btn btn-link pull-right" href="{{ path('grupo_new') }}"><i class="icon-plus"></i> Nuevo</a>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>

                                <tr>
                                    <th>Nombre</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in pagination %}
                                    <tr>
                                        <td>{{ entity.nombre }}</td>
                                        <td>
                                            <a class="btn btn-link" href="{{ path('grupo_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Editar</a>
                                            <a class="btn btn-link" href="{{ path('grupo_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> Ver</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>





{% endblock %}