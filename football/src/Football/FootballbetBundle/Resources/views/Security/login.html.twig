{% extends 'FootballbetBundle::layout.html.twig' %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/footballbet/slider-elastic/js/jquery.js')}}"></script>

    {{ parent() }}
{% endblock %}
{% block id 'login' %}
{% block content %}
    <div id="entrar" class="container">
        <h1>{{ "Accede a tu cuenta" | trans }}</h1>

        {% if error %}
            <h5 style="color: #a9302a; "> <b>
            {% if error.message == 'Bad credentials' %}
               Email o contrase&ntilde;a incorrectos.
            {% else %}
            {{ error.message }}
              </b>
        {% endif %}
            </h5>
        {% endif %}
        <form action="{{ path('user_login_check') }}" method="post">
            <div class="form-group">
                <label for="username">{{ "Email" | trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>

            <div class="form-group">
                <label for="password">{{ "Contrase√±a" | trans }}</label>
                <input type="password" id="password" name="_password"/>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" name="login" value="{{ "Entrar" | trans }}"/>
            </div>
        </form>
    </div>


{% endblock %}

{% block aside %}
{% endblock %}