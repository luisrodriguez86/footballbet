<table class="table table-striped table-bordered table-advance table-hover" id="tableUsers">
    <thead>

    <tr>
        <th>Fotos</th>
        <th class="hidden-xs">Email</th>
        <th>Nombre</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
            <td><img src="{{ asset(image_web_dir~entity.photo)}}" class="img-circle" width="72px"></td>
            <td class="hidden-xs">{{ entity.email }}</td>
            <td>{{ entity.nombre }}</td>
            <td>
                <a class="btn btn-link" href="{{ path('user_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Editar</a>
                <a class="btn btn-link" href="{{ path('user_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> Ver</a>
            </td>
        </tr>
     {% else %}
         <tr style="background-color: #F9F9F9"> <td style="border: none">No existen resultados.</td><td style="border: none; background-color: #F9F9F9"></td><td style="border: none; background-color: #F9F9F9"></td><td style="border: none; background-color: #F9F9F9"></td> </tr>
      {#<tr> <td><h5>No existen resultados.</h5></td> </tr>#}

    {% endfor %}
    </tbody>
</table>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>