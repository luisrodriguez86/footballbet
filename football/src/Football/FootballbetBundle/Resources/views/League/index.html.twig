{% extends 'FootballbetBundle::layout_admin.html.twig' %}
{% block title %}
    - Bienvenidos al Sitio de ...
{% endblock %}

{% block content -%}
    <div class="page-content">
        <div class="row">
            <div class="col-md-12">

                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption"><h3>Listado de Ligas</h3></div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>

                                <tr>
                                   <th>Nombre</th>
                                    <th>Logo</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in pagination %}
                                    <tr>
                                       <td>{{ entity.nombre }}</td>
                                        <td><img src="{{ entity.logo }}"/></td>
                                        <td>
                                            <a class="btn btn-link" href="{{ path('league_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> Ver</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}

